{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build hashtable",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "-c",
                "${workspaceFolder}/hashtable.cpp",
                "-o",
                "${workspaceFolder}/hashtable.o"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compile hashtable.cpp into hashtable.o."
        },
        {
            "label": "build server",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "-c",
                "${workspaceFolder}/server.cpp",
                "-o",
                "${workspaceFolder}/server.o"
            ],
            "dependsOn": [
                "build hashtable"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compile server.cpp into server.o."
        },
        {
            "label": "link server",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "${workspaceFolder}/server.o",
                "${workspaceFolder}/hashtable.o",
                "-o",
                "${workspaceFolder}/server"
            ],
            "dependsOn": [
                "build server"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Link server.o and hashtable.o into server executable."
        },
        {
            "label": "build client",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "-c",
                "${workspaceFolder}/client.cpp",
                "-o",
                "${workspaceFolder}/client.o"
            ],
            "dependsOn": [
                "build hashtable"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compile client.cpp into client.o."
        },
        {
            "label": "link client",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "${workspaceFolder}/client.o",
                "${workspaceFolder}/hashtable.o",
                "-o",
                "${workspaceFolder}/client"
            ],
            "dependsOn": [
                "build client"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Link client.o and hashtable.o into client executable."
        }
    ]
}